<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="40dp"
        android:src="@drawable/ic_launcher_background"
        android:id="@+id/dialog_box_user_image"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/dialog_box_user_image"
        android:id="@+id/dialog_box_user_name"
        android:text="UserName"
        android:textSize="25sp"
        android:layout_marginTop="15dp"
        android:textColor="@color/colorBlack"
        android:textAlignment="center"
        android:fontFamily="sans-serif"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/dialog_box_user_name"
        android:id="@+id/dialog_box_user_followers"
        android:text="588 Followers"
        android:textSize="14sp"
        android:layout_marginTop="3dp"
        android:textColor="@color/colorBlack"
        android:textAlignment="center"
        android:fontFamily="sans-serif"/>
    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/dialog_box_user_followers"
        android:id="@+id/dialog_box_btn"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="30dp"
        android:text="Cerrar"
        android:textColor="@color/colofondo"
        android:background="@drawable/follow_back_btn"
        android:textAllCaps="false"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/dialog_box_btn"
        android:layout_marginTop="30dp"
        android:id="@+id/dialog_box_user_desc"
        android:layout_marginRight="20dp"
        android:textAlignment="center"
        android:layout_marginLeft="20dp"
        android:text="HOLAAAAAAAAAAAAAAAA"/>
</androidx.constraintlayout.widget.ConstraintLayout>